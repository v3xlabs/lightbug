{
    "manifest_version": 3,
    "name": "LightBug Connector",
    "version": "0.0.1",
    "permissions": ["tabs", "serial"],
    "icons": {
      "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "options_page": "html/options.html",
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ]
}
